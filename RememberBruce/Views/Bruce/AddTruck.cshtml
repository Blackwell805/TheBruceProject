@model Truck

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <style>
        @**{outline:1pxdottedred;}*@.bg {
            /* The image used */
            background-image: url("https://utahhome.me/wp-content/uploads/2014/07/stansbury-park-shutterstock_42888772.jpg");

            /* Full height */
            height: 100%;

            /* Center and scale the image nicely */
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
        }

        #instagram {
            background: radial-gradient(circle at 30% 107%,
                    #fdf497 0%,
                    #fdf497 5%,
                    #fd5949 45%,
                    #d6249f 60%,
                    #285aeb 90%);
            -webkit-background-clip: text;
            /* Also define standard property for compatibility */
            background-clip: text;
            -webkit-text-fill-color: transparent;

            font-size: 40px;
            /*change this to change the size*/
        }

        #facebook {
            font-size: 40px;
        }
    </style>
</head>


<body class="bg">

    <div class="container" style="font-family: Georgia; box-shadow: 5px 10px 18px;">
        <div style="display: flex; justify-content:flex-end;">
            <a href="/home" class="btn btn-success">Home</a>
        </div>

        <div class="row" style="display: flex; justify-content: center;">

            <div class="col" style="text-align: center;">
                <h1>You FOUND One!!!</h1>
                <h4>Tell us where!</h4>
                <form asp-controller="Bruce" asp-action="Create" class="md-form" method="POST">
                    <div class="file-field">
                        <div class="d-flex justify-content-center">
                            <div class="btn btn-mdb-color btn-rounded float-left">
                                <label asp-for="Image"></label>
                                <span asp-validation-for="Image"></span>
                                @using (Html.BeginForm("new", "Content", FormMethod.Post, new
                                {
                                    enctype
                                = "multipart/form-data"
                                }))
                                {
                                    <input asp-for="Image" type="file" name="AddImage" id="AddImage"
                                    onchange="fileCheck(this);">
                                }
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <div class="form-outline">
                                <label asp-for="Location"></label>
                                <span asp-validation-for="Location"></span>
                                <input asp-for="Location" type="text" id="Location" class="form-control"
                                    aria-describedby="textExample1" placeholder="Location of Truck" />
                                <label class="form-label" for="location" aria-placeholder="Location"></label>
                            </div>
                        </div>
                        <div>
                            <div class="form-floating">
                                <label asp-for="Details"></label>
                                <span asp-validation-for="Details"></span>
                                <textarea asp-for="Details" class="form-control" placeholder="Details" id="Details"
                                    style="height: 100px"></textarea>
                            </div>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="col" style="text-align: center;">
                <div class="row">
                    <h4>Did your Bruce Truck come with a QR Code?</h4>
                    <p style="font-size: small;">Scan the QR code now if you haven't done so! You can see where this
                        truck has already been to and
                        if
                        this
                        is it's first time, we have you to thank for it!</p>
                    <div>
                        <img src="/img/AandB.jpeg" style="max-width: 50%;" />
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="row" style="display:flex; justify-content: center">
        <a href="https://www.facebook.com/rememberbrucethecaboose/" class='fab fa-facebook-square' id="facebook"></a>
        <a href="https://www.instagram.com/rememberbrucethecaboose/?hl=en" class='fab fa-instagram' id="instagram"></a>
    </div>


</body>


</html>
